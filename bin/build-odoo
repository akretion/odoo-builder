#!/bin/bash
set -e
if [[ $BUILD_MODE == 'production' ]]
then
    ak build -c odoo-spec.yaml -f odoo-frozen.yaml
    rm -rf /builder/src/addons/*
    mv /builder/links/* /builder/src/addons
    rm -rf /builder/src/.git
else
    cd /builder/src
    git checkout origin/$ODOO_VERSION
    rm -rf /builder/src/.git
fi
